  else
     setenv MPIRUN_IDF    "prun -t -s -n \$NCPUS_IDF \$IDFX"
     setenv MPIRUN_IAU    "prun -t -s -n \$NCPUS_IAU \$IAUX"
#    setenv MPIRUN_UPRST  "prun -t -s -n \$NCPUS_IAU \$RSTUPDX"
