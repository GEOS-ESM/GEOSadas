#\${PESTOROOT}%s/obs/Y%y4/M%m2/D%d2/H%h2/%s.diagsa_ssmis_%c%c%c_ges.%y4%m2%d2_%h2z+%y4%m2%d2_%h2z.ods
#\${PESTOROOT}%s/obs/Y%y4/M%m2/D%d2/H%h2/%s.diagsa_ssu_%c%c%c_ges.%y4%m2%d2_%h2z+%y4%m2%d2_%h2z.ods
#\${PESTOROOT}%s/obs/Y%y4/M%m2/D%d2/H%h2/%s.diagsa_ssu_tirosn_ges.%y4%m2%d2_%h2z+%y4%m2%d2_%h2z.ods
#\${PESTOROOT}%s/obs/Y%y4/M%m2/D%d2/H%h2/%s.diagsa_tmi_trmm_ges.%y4%m2%d2_%h2z+%y4%m2%d2_%h2z.ods
EOF

   close(ARC);

}
#=======================================================================
sub arch_o3anasa {

   open(ARC,">$fvhome/o3anasa/o3anasastorage.arc")
   || die "Cannot create $fvhome/o3anasa/anasastorage.arc: $!";

   print ARC <<"EOF";
#
# Archiving rules for fvDAS output.
#
# This is a PESTO (Put Experiment in Mass STOrage) resource file.
#
# The environment variable PESTOROOT refers to the destination archive
# location, e.g.,
#
# a) for moving files to SILO:
#    setenv PESTOROOT '/scratch1/dasilva'
#
# b) for moving files to MASS STORAGE:
#    setenv PESTOROOT 'dasilva\@helios1.nas.nasa.gov:'
#
# This file has been automatically generated by fvsetup.
# $nametag
#...........................................................................
#
#  The following refer to stand-alone analysis in re-run mode
#
\${PESTOROOT}%s/etc/Y%y4/M%m2/%s.o3anasa.log.%y4%m2%d2_%h2z.txt
\${PESTOROOT}%s/etc/Y%y4/M%m2/%s.o3anasa_stats.log.%y4%m2%d2_%h2z.txt
\${PESTOROOT}%s/etc/Y%y4/M%m2/%s.o3odssa.log.%y4%m2%d2_%h2z.txt
\${PESTOROOT}%s/etc/Y%y4/M%m2/%s.o3zeitsa.reg.%y4%m2%d2_%h2z.txt
\${PESTOROOT}%s/ana/Y%y4/M%m2/%s.o3anasa.eta.%y4%m2%d2_%h2%n2z.$ncsuffix
#
\${PESTOROOT}%s/obs/Y%y4/M%m2/D%d2/H%h2/%s.o3diagsa_gome_metop-%c.%y4%m2%d2_%h2z.ods
\${PESTOROOT}%s/obs/Y%y4/M%m2/D%d2/H%h2/%s.o3diagsa_mls55_aura.%y4%m2%d2_%h2z.ods
\${PESTOROOT}%s/obs/Y%y4/M%m2/D%d2/H%h2/%s.o3diagsa_omi_aura.%y4%m2%d2_%h2z.ods
\${PESTOROOT}%s/obs/Y%y4/M%m2/D%d2/H%h2/%s.o3diagsa_omieff_aura.obs.%y4%m2%d2_%h2z.ods
\${PESTOROOT}%s/obs/Y%y4/M%m2/D%d2/H%h2/%s.o3diagsa_o3lev_aura.obs.%y4%m2%d2_%h2z.ods
\${PESTOROOT}%s/obs/Y%y4/M%m2/D%d2/H%h2/%s.o3diagsa_sbuv%c_%c%c%c.%y4%m2%d2_%h2z.ods
#
#  The following refer to stand-alone analysis in prognostic mode
#
\${PESTOROOT}%s/etc/Y%y4/M%m2/%s.o3anasa.log.%y4%m2%d2_%h2z+%y4%m2%d2_%h2z.txt
\${PESTOROOT}%s/etc/Y%y4/M%m2/%s.o3anasa_stats.log.%y4%m2%d2_%h2z+%y4%m2%d2_%h2z.txt
\${PESTOROOT}%s/etc/Y%y4/M%m2/%s.o3odssa.log.%y4%m2%d2_%h2z+%y4%m2%d2_%h2z.txt
\${PESTOROOT}%s/etc/Y%y4/M%m2/%s.o3zeitsa.reg.%y4%m2%d2_%h2z+%y4%m2%d2_%h2z.txt
#
\${PESTOROOT}%s/obs/Y%y4/M%m2/D%d2/H%h2/%s.o3diagsa_gome_metop-%c.%y4%m2%d2_%h2z+%y4%m2%d2_%h2z.ods
\${PESTOROOT}%s/obs/Y%y4/M%m2/D%d2/H%h2/%s.o3diagsa_mls55_aura.obs.%y4%m2%d2_%h2z+%y4%m2%d2_%h2z.ods
\${PESTOROOT}%s/obs/Y%y4/M%m2/D%d2/H%h2/%s.o3diagsa_omi_aura.%y4%m2%d2_%h2z+%y4%m2%d2_%h2z.ods
\${PESTOROOT}%s/obs/Y%y4/M%m2/D%d2/H%h2/%s.o3diagsa_omieff_aura.obs.%y4%m2%d2_%h2z+%y4%m2%d2_%h2z.ods
\${PESTOROOT}%s/obs/Y%y4/M%m2/D%d2/H%h2/%s.o3diagsa_o3lev_aura.obs.%y4%m2%d2_%h2z+%y4%m2%d2_%h2z.ods
\${PESTOROOT}%s/obs/Y%y4/M%m2/D%d2/H%h2/%s.o3diagsa_sbuv%c_%c%c%c.%y4%m2%d2_%h2z+%y4%m2%d2_%h2z.ods
\${PESTOROOT}%s/obs/Y%y4/M%m2/D%d2/H%h2/%s.o3diagsa_tmi_trmm.%y4%m2%d2_%h2z+%y4%m2%d2_%h2z.ods
#
EOF

   close(ARC);

}
