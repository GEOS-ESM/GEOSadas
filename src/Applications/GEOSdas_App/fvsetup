#    setenv MPIRUN_UPRST  "prun -t -s -n \$NCPUS_IAU \$RSTUPDX"
     setenv MPIRUN_ANA    "prun -t -s -n \$NCPUS_GSI \$ANAX"
     setenv MPIRUN_OBSVR  "prun -t -s -n \$NCPUS_GSI \$ANAX"
