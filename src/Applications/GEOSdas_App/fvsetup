  } elsif ( "$res" eq "C720" ) {  # Cubed-sphere
       $cubed = 1;
       $o_servers = 8;
       $bckend_wrts = 8;
       $specres = "254";
       $jcap = "254";
       $agcm_grid_type = "Cubed-Sphere";
       $agcm_im  =  720;
       $agcm_jm  =  $agcm_im * 6;
       $nx = 24;
       $ny = $nx * 6;
       $km = $vres;
       $dt = 300;
       $long_dt  = $dt;
       $pert_dt = 900;
       $chemdt = $dt;
