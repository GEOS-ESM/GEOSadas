EOF
  }

}
#=======================================================================
sub ddd_hhmmss {
    my ($hours, $days, $hrs, $hhmmss);

    # input number of hours
    #----------------------
    $hours = shift @_;
    
    # convert hours to days & hrs
    #----------------------------
    $days = $hours / $HRS_PER_DAY;
    $days = int($days);
    $hrs = $hours - ( $days * $HRS_PER_DAY );

    # expand $hrs to get $hhmmss
    #---------------------------
    $hrs = sprintf "%02d", $hrs;
    $hhmmss = $hrs ."0000";

    return "$days $hhmmss";
}

